<% simple_files = @files.select { |f| f.text? } %>
<% unless simple_files.empty? then %>
<nav id="fileindex-section" class="project-section">
  <header>
    <h3>Pages</h3>
  </header>

  <ul>
  <% simple_files.each do |f| %>
    <li class="file"><a href="<%= rel_prefix %>/<%= f.path %>"><%= h f.page_name %></a>
  <% end %>
  </ul>
</nav>
<% end %>

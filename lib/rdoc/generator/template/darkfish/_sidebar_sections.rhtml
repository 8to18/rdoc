<% unless klass.sections.length == 1 then %>
<nav id="sections-section">
  <header>
    <h3>Sections</h3>
  </header>

  <ul class="link-list">
    <% klass.sort_sections.each do |section| %>
      <li><a href="#<%= section.aref %>"><%= h section.title %></a></li>
    <% end %>
  </ul>
</nav>
<% end %>
